    <tbody>
    <?php
    foreach ($revisions as $revision) {
    ?>
        <tr>
            <td>
                <a href="<?=
                    $this->url('audit/revisions',
                        array(
                            'revisionId' => $revision->getId()
                        )
                    );
                ?>">

                    <?= $this->escapeHtml($revision->getId());?>
                    @ <?php echo $this->AuditDateTimeFormatter($revision->getTimestamp()); ?>

                </a>
            </td>

            <td>
            <?php
            foreach ($revision->getRevisionEntities() as $revisionEntity) {
            ?>
            <div>
                <a class="btn btn-<?php
                    switch ($revision->getRevisionType()) {
                        case 'INS':
                            echo 'success';
                            break;
                        case 'UPD':
                            echo 'warning';
                            break;
                        case 'DEL':
                            echo 'danger';
                            break;
                        default:
                            echo 'info';
                    }
                ?>"
                    href="<?=
                        $this->url(
                            'audit/revision-entity',
                            array(
                                'revisionEntityId' => $revisionEntity->getId(),
                            )
                        );?>"
                    >
                        (<?= $revisionEntity->getId(); ?>)
                        <?= $this->escapeHtml($revisionEntity->getAuditEntity()->getAuditedEntityClass()); ?>
                        <div class="entityKeys">
                            <?php
                            $rows = array();
                            foreach($revisionEntity->getEntityKeys() as $key => $value) {
                                $rows[] = $this->escapeHtml($key) . ' => ' . $this->escapeHtml($value);
                            }
                            echo implode(', ', $rows);
                            ?>
                        </div>
                    </a>
                </div>
            <?php
            }
            ?>
            </td>

            <td><?= $this->escapeHtml($revision->getComment()); ?></td>

            <td>
                <a href="#" class="btn btn-default">
                    <?php
                        if ($revision->getUser()) {
                            echo $this->gravatar($revision->getUser()->getEmail(), array('img_size' => 24));
                            echo ' ';
                            echo $this->zfcUserDisplayName($revision->getUser());
                        } else {
                            echo $this->gravatar('anonymous@unknown.net', array('img_size' => 24));
                            echo ' Anonymous';
                        }
                    ?>
                </a>
            </td>
        </tr>
    <?php
    }
    ?>
    </tbody>
</table>
